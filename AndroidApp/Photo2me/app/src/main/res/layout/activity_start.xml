<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.photo2me.photo2me.StartActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/bem_vindo_a"
        android:textColor="@color/laranjaSemiEscuro"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Festa do João"
        android:textSize="30dp"
        android:textColor="@color/laranjaOficial"
        android:textStyle="bold"
        android:id="@+id/txtNomeFesta"
        android:layout_marginTop="44dp"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="A festa irá começar às 12:00 do dia 13/10/2016 e irá até as 12:00 do dia 14/10/2016. \n\n Apenas dentro deste período, todas as fotos que você tirar serão enviadas para o dono do evento. \n\n Então, vamos lá? Pronto para tirar fotos inesquecíveis?"
        android:id="@+id/txtDetalhes"
        android:textColor="@color/laranjaSemiEscuro"
        android:textAlignment="textStart"
        android:layout_marginTop="28dp"
        android:layout_below="@+id/txtNomeFesta"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/comecar"
        android:id="@+id/button"
        style="@style/BotaoLaranja"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
